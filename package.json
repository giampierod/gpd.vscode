{
	"name": "gpd",
	"displayName": "gpd",
	"description": "Getting Productivity Done",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.36.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.newTodo",
		"onCommand:extension.selectTodo",
		"onCommand:extension.doneTodo",
		"onCommand:extension.doneTodoAndRepeat",
		"onCommand:extension.toggleNote"
		
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "GPD",
				"extensions": [
					".GPD",
					".gpd"
				],
				"aliases": [
					"GPD"
				]
			},
			{
				"id": "GPD_Note",
				"extensions": [
					".gpd_note",
					".GPD_Note"
				]
			}
		],
		"grammars": [
			{
				"language": "GPD",
				"scopeName": "source.gpd",
				"path": "./syntaxes/gpd.tmLanguage.json"
			},
			{
				"language": "GPD_Note",
				"scopeName": "source.gpd_note",
				"path": "./syntaxes/gpd_note.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "GPD",
				"path": "./snippets/gpd.json"
			}
		],
		"commands": [			
			{
				"command": "extension.newTodo",
				"title": "New Todo",
				"enablement": "editorLangId == GPD"
			},
			{
				"command": "extension.selectTodo",
				"title": "Select Todo",
				"enablement": "editorLangId == GPD"
			},
			{
				"command": "extension.doneTodo",
				"title": "Done Todo",
				"enablement": "editorLangId == GPD"
			},
			{
				"command": "extension.doneTodoAndRepeat",
				"title": "Done Todo and Repeat",
				"enablement": "editorLangId == GPD"
			},
			{
				"command": "extension.toggleNote",
				"title": "Toggle Note",
				"enablement": "editorLangId == GPD"
			}

		],
		"keybindings": [
			{
				"command": "extension.newTodo",
				"key": "ctrl+shift+/",
				"when": "editorLangId == GPD"
			},
			{
				"command": "extension.selectTodo",
				"key": "ctrl+shift+.",
				"when": "editorLangId == GPD"
			},
			{
				"command": "extension.doneTodo",
				"key": "ctrl+shift+]",
				"when": "editorLangId == GPD"
			},
			{
				"command": "extension.doneTodoAndRepeat",
				"key": "ctrl+shift+[",
				"when": "editorLangId == GPD"
			},
			{
				"command": "extension.toggleNote",
				"key": "ctrl+shift+,",
				"when": "editorLangId == GPD"
			}

		],
		"menus": {
			"commandPalette": [
				{
					"command": "extension.newTodo",
					"when": "editorLangId == GPD"
				},
				{
					"command": "extension.selectTodo",
					"when": "editorLangId == GPD"
				},
				{
					"command": "extension.doneTodo",
					"when": "editorLangId == GPD"
				},
				{
					"command": "extension.doneTodoAndRepeat",
					"when": "editorLangId == GPD"
				},
				{
					"command": "extension.toggleNote",
					"when": "editorLangId == GPD"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.36.0",
		"eslint": "^5.13.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"vscode-test": "^1.0.0-next.0"
	},
	"dependencies": {
		"moment": "^2.24.0",
		"tslint": "^5.18.0"
	}
}
